<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mjuaji.howaboutstart.GameActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textPartA"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:text="2"
        android:textSize="70sp"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        app:layout_constraintRight_toLeftOf="@+id/textOperator"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textPartB"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/buttonChoice1"
        app:layout_constraintTop_toTopOf="@+id/textPartB"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp" />

    <TextView
        android:id="@+id/textOperator"
        android:layout_width="53dp"
        android:layout_height="0dp"
        android:text="X"
        android:textSize="70sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="44dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPartB"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:text="2"
        android:textSize="70sp"
        android:layout_marginEnd="72dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="72dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="54dp"
        android:layout_height="78dp"
        android:text="="
        android:textSize="79sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/buttonChoice2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textOperator"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonChoice1"
        android:layout_width="92dp"
        android:layout_height="65dp"
        android:text="4"
        android:textSize="40sp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="33dp"
        app:layout_constraintRight_toLeftOf="@+id/buttonChoice2"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonChoice2"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="33dp" />

    <Button
        android:id="@+id/buttonChoice2"
        android:layout_width="88dp"
        android:layout_height="66dp"
        android:text="5"
        android:textSize="40sp"
        android:layout_marginEnd="35dp"
        app:layout_constraintRight_toLeftOf="@+id/buttonChoice3"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textLevel"
        android:layout_marginBottom="71dp"
        android:layout_marginRight="35dp" />

    <Button
        android:id="@+id/buttonChoice3"
        android:layout_width="88dp"
        android:layout_height="68dp"
        android:text="6"
        android:textSize="40sp"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonChoice2"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/textScore"
        android:layout_width="114dp"
        android:layout_height="55dp"
        android:text="Score: 999"
        android:textSize="24sp"
        android:layout_marginStart="32dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp" />

    <TextView
        android:id="@+id/textLevel"
        android:layout_width="81dp"
        android:layout_height="57dp"
        android:layout_marginEnd="16dp"
        android:text="Level: 4"
        android:textSize="24sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="56dp"
        app:layout_constraintLeft_toRightOf="@+id/buttonChoice2"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="16dp" />
</android.support.constraint.ConstraintLayout>
